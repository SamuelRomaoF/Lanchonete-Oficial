{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "netlify/functions-dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["netlify/functions/**/*.ts", "server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist", "server/index.ts", "server/vite.ts"]
} 